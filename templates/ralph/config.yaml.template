# RALPH Configuration
# Generated by /setup-project
#
# This file configures the RALPH autonomous development agent.
# Rules and boundaries are injected into every AI prompt.

# Project info (auto-detected, customize as needed)
project:
  name: "{{projectName}}"
  language: "{{language}}"
  framework: "{{framework}}"
  description: "{{description}}"

# Quality gate commands - AI must pass ALL before marking tasks complete
commands:
  test: "{{testCommand}}"
  lint: "{{lintCommand}}"
  typecheck: "{{typecheckCommand}}"
  build: "{{buildCommand}}"

# Rules - Instructions the AI MUST follow on every task
# These are injected into the prompt before any task
rules:
{{#if rules}}
{{#each rules}}
  - "{{this}}"
{{/each}}
{{else}}
  # Examples:
  # - "Always use TypeScript strict mode"
  # - "Follow the error handling pattern in src/utils/errors.ts"
  # - "All API endpoints must have input validation with Zod"
  # - "Use server actions instead of API routes in Next.js"
  # - "Write tests for all new functions"
{{/if}}

# Boundaries - Files/directories the AI should NOT modify
# Use glob patterns to specify paths
boundaries:
  never_touch:
{{#if boundaries}}
{{#each boundaries}}
    - "{{this}}"
{{/each}}
{{else}}
    # Examples:
    # - "src/legacy/**"       # Legacy code
    # - "migrations/**"       # Database migrations
    # - "*.lock"              # Lock files
    # - "vendor/**"           # Vendored dependencies
    # - "*.min.js"            # Minified files
    # - ".env*"               # Environment files
{{/if}}

# Execution settings
settings:
  # Maximum retry attempts per task on failure
  max_retries: 3

  # Seconds to wait between retries
  retry_delay: 5

  # Automatically commit changes after each task
  auto_commit: true

  # Create a git branch for each task
  branch_per_task: false

  # Create PR after task completion (requires gh CLI)
  create_pr: false

# PRD settings
prd:
  # Default PRD file format: json, markdown, yaml
  format: "json"

  # Default branch naming pattern
  branch_prefix: "ralph/"

  # Story priority ordering (1 = highest)
  priority_order: "asc"

# AI engine settings
engine:
  # Default AI engine: claude
  default: "claude"

  # Model override (optional)
  # model: "sonnet"
